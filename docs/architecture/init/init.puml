@startuml init
title Command: kitcat init
skinparam style strictuml
start
:User runs `kitcat init`;

partition "Directory Setup" {
  :Create .kitcat/;
  :Create .kitcat/objects/;
  :Create .kitcat/refs/heads/;
  :Create .kitcat/refs/tags/;
}

partition "File Initialization" {
  :Create empty .kitcat/index;
  :Create empty .kitcat/commits.log;
}

partition "HEAD Setup" {
  :Write "ref: refs/heads/main";
  :Save to .kitcat/HEAD;
}

:Print "Initialized empty KitCat repository";
stop
@enduml
